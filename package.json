    "extract-zip": "^2.0.1",
    "fs-extra": "10.1.0",
    "line-awesome": "^1.3.0",
    "lokijs": "^1.5.12",
    "material-design-icons": "^3.0.1",
    "moment": "^2.27.0",
    "nanoid": "^4.0.0",
    "ngx-markdown": "^16.0.0",
    "quill": "^1.3.7",
    "quill-blot-formatter": "^1.0.5",
    "sanitize-filename": "1.6.3",
